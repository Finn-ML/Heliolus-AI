{
  "name": "heliolus-backend",
  "version": "0.0.0",
  "description": "Heliolus Platform Backend API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "test": "vitest",
    "test:contract": "vitest tests/contract",
    "test:watch": "vitest --watch",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "db:seed:trade-v3": "tsx prisma/seed-trade-v3-only.ts",
    "db:seed:financial-enhanced": "tsx prisma/seed-financial-enhanced-only.ts",
    "db:seed:revenue": "tsx prisma/seed-revenue.ts",
    "db:fix-stuck-assessments": "tsx prisma/fix-stuck-assessments.ts",
    "db:studio": "prisma studio",
    "docker:dev": "./scripts/dev-setup.sh",
    "docker:reset": "./scripts/dev-reset.sh",
    "docker:logs": "docker-compose logs -f",
    "docker:stop": "docker-compose down",
    "docker:up": "docker-compose up -d",
    "docker:test": "docker-compose -f docker-compose.test.yml up -d",
    "aws:setup": "./scripts/aws-setup.sh"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.884.0",
    "@aws-sdk/s3-request-presigner": "^3.884.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@prisma/client": "^6.16.0",
    "@types/pdfkit": "^0.17.3",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.1.2",
    "fastify": "^4.29.1",
    "fastify-plugin": "^4.5.1",
    "geoip-lite": "^1.4.10",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "openai": "^5.20.0",
    "pdfkit": "^0.17.2",
    "prisma": "^6.16.0",
    "stripe": "^18.5.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "jest": "^29.7.0",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4"
  }
}
