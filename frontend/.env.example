# ========================
# API CONFIGURATION
# ========================
VITE_API_URL=http://localhost:3001
# For production:
# VITE_API_URL=https://api.heliolus.com

# WebSocket configuration (if using)
VITE_WS_URL=ws://localhost:3001
# For production:
# VITE_WS_URL=wss://api.heliolus.com

# ========================
# APPLICATION CONFIGURATION
# ========================
VITE_APP_NAME=Heliolus Platform
VITE_APP_VERSION=0.0.0
VITE_APP_DESCRIPTION="Advanced platform for modern applications"

# Environment
VITE_NODE_ENV=development
# Options: development, staging, production

# ========================
# AUTHENTICATION
# ========================
# JWT storage key (for localStorage/sessionStorage)
VITE_AUTH_TOKEN_KEY="heliolus_auth_token"
VITE_REFRESH_TOKEN_KEY="heliolus_refresh_token"

# Session timeout (in minutes)
VITE_SESSION_TIMEOUT=60

# ========================
# EXTERNAL SERVICES
# ========================
# Stripe (Frontend keys)
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
# For production:
# VITE_STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-live-key"

# Google Analytics
VITE_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Sentry (Frontend monitoring)
VITE_SENTRY_DSN="your-frontend-sentry-dsn"

# ========================
# FEATURE FLAGS
# ========================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_SERVICE_WORKER=false

# ========================
# UI/UX CONFIGURATION
# ========================
# Theme configuration
VITE_DEFAULT_THEME="light"
# Options: light, dark, system

# Language/Internationalization
VITE_DEFAULT_LOCALE="en"
VITE_SUPPORTED_LOCALES="en,es,fr,de"

# ========================
# PERFORMANCE
# ========================
# API request timeout (in milliseconds)
VITE_API_TIMEOUT=30000

# File upload limits
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES="image/*,application/pdf,.doc,.docx"

# ========================
# DEVELOPMENT CONFIGURATION
# ========================
# Hot reload configuration
VITE_HMR_PORT=24678
VITE_HMR_HOST=localhost

# Development server
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_PORT=5173

# ========================
# SOCIAL/EXTERNAL LINKS
# ========================
VITE_COMPANY_WEBSITE="https://heliolus.com"
VITE_SUPPORT_EMAIL="support@heliolus.com"
VITE_PRIVACY_POLICY_URL="https://heliolus.com/privacy"
VITE_TERMS_OF_SERVICE_URL="https://heliolus.com/terms"

# Social media links
VITE_TWITTER_URL="https://twitter.com/heliolus"
VITE_LINKEDIN_URL="https://linkedin.com/company/heliolus"
VITE_GITHUB_URL="https://github.com/heliolus"